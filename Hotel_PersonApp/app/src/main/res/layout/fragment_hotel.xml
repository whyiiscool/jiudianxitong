<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HotelFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:id="@+id/ll_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--android:visibility="visible"-->


            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="170dp"></com.youth.banner.Banner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:divider="@drawable/divider">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/ruzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入住城市" />

                    <TextView
                        android:id="@+id/tv_livecity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ruzhu"
                        android:text="长沙市"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_dingwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="22dp"
                        android:text="我的位置" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="81dp"
                        android:src="@mipmap/dingwei" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/ruzhutime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1月21日"
                        android:textColor="#000"
                        android:textSize="20dp"
 />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ruzhutime"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="6dp"
                        android:text="入住时间" />


                    <TextView
                        android:id="@+id/lidiantime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ruzhutime"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="134dp"
                        android:layout_marginTop="0dp"
                        android:text="1月23日"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lidiantime"
                        android:layout_alignStart="@+id/lidiantime"
                        android:layout_marginTop="5dp"
                        android:text="离店时间" />

                    <TextView
                        android:id="@+id/tv_timeresult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="36dp"
                        android:text="共2晚"
                        android:textColor="#000"
                        android:textSize="15dp"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_moneyarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:text="价格区间"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/btn_searech"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:background="@drawable/hotel_textview_background"/>
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@mipmap/fuwu"/>

            <com.example.hotel_personapp.View.HorizontalListView
                android:id="@+id/hlv_hotel"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"></com.example.hotel_personapp.View.HorizontalListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="目的地推荐"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <com.youth.banner.Banner
                    android:id="@+id/banner2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                </com.youth.banner.Banner>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_homemes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="住房消息"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_homemes"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_homemes1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/hotel_textview_background"
                        android:padding="25dp"
                        android:text="好友来访"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/hotel_textview_background"
                        android:padding="25dp"
                        android:text="客房服务"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_paizi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="品牌特色 "
                    android:textColor="#000"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_paizi"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_paizi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/hotel_textview_background"
                        android:padding="25dp"
                        android:text="会议室预订"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/hotel_textview_background"
                        android:padding="25dp"
                        android:text="休闲房预订"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_jifen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="积分兑换专区 "
                    android:textColor="#000"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_jifen"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_jifen1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/hotel_textview_background"
                        android:padding="25dp"
                        android:text="全棉面巾"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/hotel_textview_background"
                        android:padding="25dp"
                        android:text="荞麦枕芯"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>